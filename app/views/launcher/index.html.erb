					<% if user_signed_in? %>
					<p>
						Hello <%= current_user.first_name %>, did you know that as a aproved member you can write articles for the whole world to see? Pretty cool, huh?<br>
						Check it out.
					</p>
					<div class="mock-btn"><%= link_to "Write article", member.new_publication_path %></div>
					<% else  %>
					<h2>Sign in</h2>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div>
						<%= f.text_field :login, autofocus: true, :placeholder=>"Username", :class=>"fluid-field" %>
						<br>
					</div>

					<div>
						<%= f.password_field :password, autocomplete: "off", :placeholder=>"Password", :class=>"fluid-field" %>
					</div>

					<div style="login-actions">

				<div class="row-fluid">
					<%= f.submit "Sign in", :class=>"mock-btn" %>
					or
					<%= link_to "Register", new_registration_path(resource_name), :class=>"mock-btn", :style=>" padding: 0 0;" %>
				</div>
					  <br />


						<% if devise_mapping.rememberable? -%>
						<div class="check-style">
							<%= f.check_box :remember_me %> <%= f.label :remember_me %>
						</div>
						<% end -%>
					</div>
					

					<%= render "users/shared/links" %>
					<% end %>		
					<% end %>
				</div>
				<div class="span2"></div>
			</div>	
			<div class="span2"></div>				
		</div>
	</div>



